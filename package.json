{
  "name": "six-cities",
  "version": "7.0.0",
  "description": "Проект «Шесть городов» от HTML Academy",
  "keywords": [
    "rest",
    "api",
    "node.js"
  ],
  "main": "main.js",
  "scripts": {
    "start": "npm run build && node ./dist/main.rest.js",
    "start:dev": "npm run ts ./src/main.rest.ts | pino-pretty --colorize --translateTime SYS:standard",
    "build": "npm run clean && npm run compile",
    "lint": "eslint src/ --ext .ts",
    "compile": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "ts": "tsc --noEmit && node --no-warnings=--no-warnings=ExperimentalWarning --loader ts-node/esm",
    "ts:import": "tsc --noEmit && node --no-warnings=--no-warnings=ExperimentalWarning --loader ts-node/esm ./src/main.cli.ts --import ./mocks/mock-offers.tsv",
    "mock:server": "json-server ./mocks/mock-server-data.json --port 3123",
    "generate": "tsc --noEmit && node --no-warnings=--no-warnings=ExperimentalWarning --loader ts-node/esm ./src/main.cli.ts --generate 10 ./mocks/mock-offers.tsv http://localhost:3123/api"
  },
  "devDependencies": {
    "@types/convict": "6.1.4",
    "@types/convict-format-with-validator": "6.0.3",
    "@types/node": "20.12.7",
    "@typescript-eslint/eslint-plugin": "6.7.0",
    "@typescript-eslint/parser": "6.7.0",
    "eslint": "8.49.0",
    "eslint-config-htmlacademy": "9.1.1",
    "json-server": "0.17.3",
    "pino-pretty": "10.2.0",
    "rimraf": "5.0.1",
    "ts-node": "10.9.2",
    "tslib": "2.6.2",
    "typescript": "5.4.5"
  },
  "type": "module",
  "engines": {
    "node": "^22",
    "npm": "^10"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "convict": "6.2.4",
    "convict-format-with-validator": "6.2.0",
    "dotenv": "16.3.1",
    "got": "13.0.0",
    "inversify": "6.0.1",
    "pino": "8.15.1",
    "reflect-metadata": "0.1.13"
  }
}
